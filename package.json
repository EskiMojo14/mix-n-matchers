{
  "name": "mix-n-matchers",
  "version": "1.8.0",
  "description": "Miscellaneous custom Jest matchers",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./all": {
      "import": "./dist/all.js",
      "require": "./dist/all.cjs"
    },
    "./jest-globals": {
      "import": "./dist/jest-globals.js",
      "require": "./dist/jest-globals.cjs"
    },
    "./vitest": {
      "import": "./dist/vitest.js",
      "require": "./dist/vitest.cjs"
    }
  },
  "files": [
    "dist",
    "all",
    "jest-globals",
    "vitest"
  ],
  "workspaces": [
    "website"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "prepare": "husky install",
    "prebuild": "yarn run type",
    "build": "yarn clean && tsup",
    "test": "yarn node --experimental-vm-modules $(yarn bin jest) --setupFilesAfterEnv ./src/jest-globals.ts ./jest-setup.ts",
    "test:dist": "yarn node --experimental-vm-modules $(yarn bin jest) --setupFilesAfterEnv mix-n-matchers/jest-globals ./jest-setup.ts",
    "vitest": "vitest",
    "vitest:dist": "vitest --config vitest-dist.config.ts",
    "test:all": "yarn run test && yarn run vitest --run",
    "test:all:dist": "yarn run test:dist && yarn run vitest:dist --run",
    "lint": "eslint",
    "pre-commit": "lint-staged",
    "attw": "attw",
    "publint": "publint",
    "type": "tsc",
    "prepack": "yarn run publint --pack false",
    "website": "yarn workspace website start"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/EskiMojo14/mix-n-matchers.git"
  },
  "keywords": [
    "jest",
    "vitest",
    "matchers",
    "extend",
    "extended",
    "test",
    "testing",
    "assertions"
  ],
  "author": "eskimojo",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/EskiMojo14/mix-n-matchers/issues"
  },
  "homepage": "https://github.com/EskiMojo14/mix-n-matchers#readme",
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.17.3",
    "@eslint/js": "^9.18.0",
    "@jest/globals": "^29.7.0",
    "@types/node": "^20.11.20",
    "@typescript-eslint/parser": "^8.19.1",
    "eslint": "^9.0.0",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-import-x": "^4.6.1",
    "eslint-plugin-vitest": "^0.5.4",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jiti": "^2.4.2",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.3",
    "publint": "^0.3.2",
    "rimraf": "^6",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "tsup": "^8.0.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.19.1",
    "vitest": "^2"
  },
  "dependencies": {
    "@jest/expect-utils": ">=28.0.0",
    "jest-matcher-utils": ">=28.0.0"
  },
  "peerDependencies": {
    "jest": ">=28.0.0",
    "vitest": ">=1.0.0"
  },
  "peerDependenciesMeta": {
    "jest": {
      "optional": true
    },
    "vitest": {
      "optional": true
    }
  },
  "engines": {
    "node": "^14.15.0 || ^16.10.0 || >=18.0.0"
  },
  "lint-staged": {
    "*.{ts,md}": "prettier --write"
  },
  "prettier": {},
  "tsup": {
    "entry": [
      "src/index.ts",
      "src/all.ts",
      "src/jest-globals.ts",
      "src/vitest.ts"
    ],
    "sourcemap": true,
    "format": [
      "esm",
      "cjs"
    ],
    "dts": true,
    "minify": true,
    "external": [
      "@jest/globals"
    ]
  },
  "packageManager": "yarn@4.2.2"
}
